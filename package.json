{
  "name": "simple-commonmark-react",
  "version": "0.5.0",
  "keywords": [
    "commonmark",
    "markdown",
    "react",
    "renderer"
  ],
  "repository": "GAumala/simple-commonmark-react",
  "description": "React renderer for Commonmark (rationalized Markdown) written in TypeScript",
  "main": "src/CommonMarkReact.js",
  "author": "Gabriel Aumala",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "mapCoverage": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest/preprocessor.js",
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "peerDependencies": {
    "react": "^15.5.4"
  },
  "devDependencies": {
    "@types/commonmark": "^0.22.29",
    "@types/react": "^15.0.25",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^2.13.1",
    "jest": "^20.0.4",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "ts-jest": "^20.0.5",
    "typescript": "^2.3.3"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc -d ./src/CommonMarkReact.ts",
    "dev": "yarn run build && yarn test",
    "ci": "yarn run build -- --target es2015 --moduleResolution node && yarn test && cat ./coverage/lcov.info | coveralls",
    "release": "yarn run tsc && publish"
  },
  "dependencies": {
    "commonmark": "^0.27.0"
  }
}
